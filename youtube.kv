<IconListItem>

    IconLeftWidget:
        icon: root.icon


MDFloatLayout:
    Image:
        source: "youtube.png"
        allow_stretch:True
        # image_ratio:True
        pos_hint: {'center_x': 0.5,'top':0.99}
        size_hint: (1,0.2)
    MDTextField:
        id:link_input
        hint_text: "YouTube linkni kiriting..."
        mode: "rectangle"
        pos_hint: {'center_x': 0.5,'top':0.75}
        size_hint: (0.95,0.1)
        font_size: 16
    MDRectangleFlatIconButton:
        pos_hint: {'center_x': 0.5,'top':0.63}
        size_hint: (0.25,0.03)
        icon: "card-search"
        text: "Videoni Qidirish"
        theme_text_color: "Custom"
        text_color: "orange"
        font_size: 16
        line_color: "red"
        theme_icon_color: "Custom"
        icon_color: "orange"
        on_release: app.search_function()
    MDLabel:
        id:message_label
        text:""
        pos_hint:{'center_x': 0.5,'top': 20}
        size_hint:(1,0.02)
        halign:'center'
        theme_text_color:"Custom"
        text_color:(0,0,1)
    AsyncImage:
        id:thumb_img
        source:""
        allow_stretch:True
        # keep_ratio:False
        pos_hint:{'center_x': 0.5,'top': 20}
        size_hint:(0.7,0.3)
    MDLabel:
        id:titleLabel
        text:""
        pos_hint:{'center_x': 0.5,'top':20}
        size_hint:(0.9,0.02)
        halign:'center'
        text_color:(0,0,1)
        font_size:13
    MDLabel:
        id:lengthLabel
        text:""
        pos_hint:{'center_x': 0.5,'top':20}
        size_hint:(0.9,0.01)
        halign:'center'
        font_size:13
        theme_text_color:"Custom"
        text_color:(0,0,1)
    MDRaisedButton:
        id:downloadButton
        text:"Download"
        font_size:"18sp"
        md_bg_color:"red"
        pos_hint:{'right':0.5,'top': 20}
        size_hint:(.2,0.06)
        on_release:app.filechooser()

    MDDropDownItem:
        id: drop_item
        size_hint:(.2,0.06)
        pos_hint: {'x':0.5,'top': 20}
        text: ''
        on_release: app.choose_resolution(self)